<div class="row form">
  <div class="col-lg-12">
    <%= form_for(@answer) do |f| %>
      <h3><span>Q. </span><%= @question.questions %></h3>
      <div class="form-group">
        <label><%= f.radio_button :answer, @question.choice1 %><%= @question.choice1 %></label><br>
        <label><%= f.radio_button :answer, @question.choice2 %><%= @question.choice2 %></label><br>
        <label><%= f.radio_button :answer, @question.choice3 %><%= @question.choice3 %></label><br>
        <%= f.text_area :comment, placeholder: "学習メモ", cols:"80", rows:"10", autofocus:"true", class:"form-control" %><br>
      </div>
      <%= f.hidden_field :question_id %>
      <%= f.submit "回答する", class:"btn"%>
    <% end %>
  </div>
</div>
